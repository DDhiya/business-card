<div class="card">
    <div class="page-header">
        <div class="header-content">
            <h3>Manage Skills</h3>
            <p>Add and organize your technical expertise</p>
        </div>
    </div>

    <div class="skill-add-section">
        <form action="/admin/skills" method="POST">
            <div class="form-row" style="grid-template-columns: 1fr 1fr auto; align-items: flex-end;">
                <div class="form-group" style="margin-bottom: 0;">
                    <label>Skill Name</label>
                    <input type="text" name="name" class="form-control" placeholder="e.g. JavaScript" required>
                </div>
                <div class="form-group" style="margin-bottom: 0; position: relative;">
                    <label>Icon (Lucide)</label>
                    <div style="display: flex; gap: 0.5rem; align-items: center;">
                        <input type="text" id="icon-search" name="icon" class="form-control" value="Code2"
                            autocomplete="off" placeholder="Search icons...">
                        <div id="icon-preview-main" class="item-icon"
                            style="width: 44px; height: 44px; flex-shrink: 0;">
                            <i data-lucide="code-2"></i>
                        </div>
                    </div>
                    <div id="icon-dropdown" class="icon-dropdown" style="display: none;">
                        <div id="icon-list" class="icon-list"></div>
                    </div>
                </div>
                <button type="submit" class="btn btn-accent">Add Skill</button>
            </div>
        </form>
    </div>

    <div class="section-divider" style="margin: 2.5rem 0; height: 1px; background: var(--brand-border);"></div>

    <div class="list-meta"
        style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
        <h4 style="margin: 0; color: var(--brand-primary);">Current Skills</h4>
        <span style="font-size: 0.75rem; color: var(--brand-muted); font-weight: 500;">Drag and drop to reorder</span>
    </div>

    <div id="skill-list" class="skill-list">
        <% skills.forEach(skill=> { %>
            <div class="skill-pill" data-id="<%= skill.id %>">
                <div id="display-<%= skill.id %>"
                    style="display: flex; align-items: center; width: 100%; gap: 0.75rem;">
                    <div class="skill-icon">
                        <i
                            data-lucide="<%= (skill.icon || 'code-2').replace(/([a-z0-9])([A-Z])/g, '$1-$2').toLowerCase() %>"></i>
                    </div>
                    <span class="skill-name">
                        <%= skill.name %>
                    </span>
                    <div class="skill-actions">
                        <button type="button" class="btn-icon" onclick="toggleEdit('<%= skill.id %>')" title="Edit">
                            <i data-lucide="pencil" style="width: 14px; height: 14px;"></i>
                        </button>
                        <form action="/admin/skills/<%= skill.id %>?_method=DELETE" method="POST" style="margin: 0;"
                            onsubmit="return confirm('Delete this skill?')">
                            <button type="submit" class="btn-icon btn-icon-danger" title="Delete">
                                <i data-lucide="trash-2" style="width: 14px; height: 14px;"></i>
                            </button>
                        </form>
                    </div>
                </div>

                <div id="edit-form-<%= skill.id %>" style="display: none; width: 100%;">
                    <form action="/admin/skills/<%= skill.id %>?_method=PUT" method="POST"
                        style="display: flex; gap: 0.5rem; align-items: center; width: 100%;">
                        <input type="text" name="name" class="form-control" value="<%= skill.name %>" required
                            style="padding: 0.25rem 0.5rem; font-size: 0.8125rem;">
                        <input type="text" class="form-control" name="icon" value="<%= skill.icon %>"
                            style="padding: 0.25rem 0.5rem; font-size: 0.8125rem; width: 80px;">
                        <button type="submit" class="btn btn-primary btn-sm"
                            style="padding: 0.25rem 0.75rem;">Save</button>
                        <button type="button" class="btn-icon" onclick="toggleEdit('<%= skill.id %>')">
                            <i data-lucide="x" style="width: 14px;"></i>
                        </button>
                    </form>
                </div>
            </div>
            <% }) %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>

<script>
    // Helper to convert CamelCase to kebab-case for Lucide
    // Handles PascalCase (CodeTwo -> code-two) and numbers (Code2 -> code-2)
    window.toKebabCase = str => str.replace(/([a-z0-9]|(?=[A-Z]))([A-Z])/g, '$1-$2').replace(/([a-z])([0-9])/g, '$1-$2').toLowerCase().replace(/^-/, '');

    window.toggleEdit = function (id) {
        const displayDiv = document.getElementById(`display-${id}`);
        const formDiv = document.getElementById(`edit-form-${id}`);
        if (formDiv.style.display === 'none') {
            formDiv.style.display = 'flex';
            displayDiv.style.display = 'none';
        } else {
            formDiv.style.display = 'none';
            displayDiv.style.display = 'flex';
        }
    }

    // Icon Search Logic
    const iconSearch = document.getElementById('icon-search');
    const iconDropdown = document.getElementById('icon-dropdown');
    const iconList = document.getElementById('icon-list');
    const mainPreview = document.getElementById('icon-preview-main');

    const commonIcons = [
        'Code2', 'Database', 'Layout', 'Server', 'Cpu', 'Terminal', 'Github', 'Globe',
        'Figma', 'Layers', 'Smartphone', 'Box', 'Cloud', 'Container', 'Workflow', 'GitBranch',
        'Monitor', 'Package', 'Shield', 'Zap', 'Waves', 'Wind', 'Flame', 'DraftingCompass',
        'Palette', 'Component', 'Braces', 'FileCode', 'FileJson', 'Wrench', 'Hammer'
    ];

    function updatePreview(iconName) {
        mainPreview.innerHTML = `<i data-lucide="${toKebabCase(iconName)}"></i>`;
        lucide.createIcons();
    }

    iconSearch.addEventListener('input', (e) => {
        const query = e.target.value.toLowerCase();
        if (query.length < 1) {
            iconDropdown.style.display = 'none';
            return;
        }

        const filtered = commonIcons.filter(icon => icon.toLowerCase().includes(query));

        if (filtered.length > 0) {
            iconList.innerHTML = filtered.map(icon => `
                <div class="icon-option" onclick="selectIcon('${icon}')">
                    <i data-lucide="${toKebabCase(icon)}"></i>
                    <span>${icon}</span>
                </div>
            `).join('');
            iconDropdown.style.display = 'block';
            lucide.createIcons();
        } else {
            iconDropdown.style.display = 'none';
        }
        updatePreview(e.target.value || 'code-2');
    });

    window.selectIcon = function (icon) {
        iconSearch.value = icon;
        iconDropdown.style.display = 'none';
        updatePreview(icon);
    }

    document.addEventListener('click', (e) => {
        if (!iconSearch.contains(e.target) && !iconDropdown.contains(e.target)) {
            iconDropdown.style.display = 'none';
        }
    });

    // Reordering
    // Reordering
    document.addEventListener('DOMContentLoaded', () => {
        const skillListEl = document.getElementById('skill-list');
        if (skillListEl) {
            Sortable.create(skillListEl, {
                animation: 150,
                ghostClass: 'sortable-ghost',
                onEnd: function (evt) {
                    const order = Array.from(skillListEl.querySelectorAll('.skill-pill')).map(item => item.getAttribute('data-id'));
                    fetch('/admin/skills/reorder', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            order
                        })
                    });
                }
            });
        }
    });
</script>
<div class="card">
    <div class="page-header">
        <div class="header-content">
            <h3>Social Links</h3>
            <p>Add and manage your social media presence</p>
        </div>
    </div>

    <div class="add-section">
        <form action="/admin/social-links" method="POST">
            <div class="form-row" style="grid-template-columns: 1fr 1fr 1fr auto; align-items: flex-end;">
                <div class="form-group" style="margin-bottom: 0;">
                    <label>Platform</label>
                    <input type="text" name="platform" class="form-control" placeholder="e.g. GitHub" required>
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                    <label>URL</label>
                    <input type="url" name="url" class="form-control" placeholder="https://github.com/username"
                        required>
                </div>
                <div class="form-group" style="margin-bottom: 0; position: relative;">
                    <label>Icon (Lucide)</label>
                    <div style="display: flex; gap: 0.5rem; align-items: center;">
                        <input type="text" id="icon-search" name="icon" class="form-control" value="Github"
                            autocomplete="off" placeholder="Search icons...">
                        <div id="icon-preview-main" class="item-icon"
                            style="width: 44px; height: 44px; flex-shrink: 0;">
                            <i data-lucide="github"></i>
                        </div>
                    </div>
                    <div id="icon-dropdown" class="icon-dropdown" style="display: none;">
                        <div id="icon-list" class="icon-list"></div>
                    </div>
                </div>
                <button type="submit" class="btn btn-accent">Add Link</button>
            </div>
        </form>
    </div>

    <div class="section-divider" style="margin: 2.5rem 0; height: 1px; background: var(--brand-border);"></div>

    <div class="list-meta"
        style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
        <h4 style="margin: 0; color: var(--brand-primary);">Existing Social Links</h4>
        <span style="font-size: 0.75rem; color: var(--brand-muted); font-weight: 500;">Drag and drop to reorder</span>
    </div>

    <div id="link-list" class="list-grid">
        <% links.forEach(link=> { %>
            <div class="list-item link-item" data-id="<%= link.id %>">
                <div id="display-<%= link.id %>" style="display: flex; align-items: center; width: 100%; gap: 1rem;">
                    <div class="item-icon">
                        <i data-lucide="<%= link.icon?.toLowerCase() || 'globe' %>"></i>
                    </div>
                    <div class="item-info" style="overflow: hidden;">
                        <div class="item-title">
                            <%= link.platform %>
                        </div>
                        <div class="item-link" style="margin-top: 0;">
                            <%= link.url %>
                        </div>
                    </div>
                    <div class="skill-actions" style="margin-left: auto;">
                        <button type="button" class="btn-icon" onclick="toggleEdit('<%= link.id %>')" title="Edit">
                            <i data-lucide="pencil" style="width: 14px; height: 14px;"></i>
                        </button>
                        <form action="/admin/social-links/<%= link.id %>?_method=DELETE" method="POST"
                            style="margin: 0;" onsubmit="return confirm('Delete this social link?')">
                            <button type="submit" class="btn-icon btn-icon-danger" title="Delete">
                                <i data-lucide="trash-2" style="width: 14px; height: 14px;"></i>
                            </button>
                        </form>
                    </div>
                </div>

                <div id="edit-form-<%= link.id %>" style="display: none; width: 100%;">
                    <form action="/admin/social-links/<%= link.id %>?_method=PUT" method="POST">
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.5rem; margin-bottom: 0.5rem;">
                            <input type="text" name="platform" class="form-control" value="<%= link.platform %>"
                                required placeholder="Platform">
                            <input type="text" name="icon" class="form-control" value="<%= link.icon %>" required
                                placeholder="Icon">
                        </div>
                        <input type="url" name="url" class="form-control" value="<%= link.url %>" required
                            placeholder="URL" style="margin-bottom: 0.5rem;">
                        <div class="form-actions">
                            <button type="button" class="btn btn-sm" onclick="toggleEdit('<%= link.id %>')"
                                style="background: var(--brand-offwhite);">Cancel</button>
                            <button type="submit" class="btn btn-primary btn-sm">Save</button>
                        </div>
                    </form>
                </div>
            </div>
            <% }) %>
    </div>
</div>

<script src="https://unpkg.com/lucide@latest"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>

<script>
    lucide.createIcons();

    function toggleEdit(id) {
        const displayDiv = document.getElementById(`display-${id}`);
        const formDiv = document.getElementById(`edit-form-${id}`);
        if (formDiv.style.display === 'none') {
            formDiv.style.display = 'block';
            displayDiv.style.display = 'none';
        } else {
            formDiv.style.display = 'none';
            displayDiv.style.display = 'flex';
        }
    }

    // Icon Search Logic
    const iconSearch = document.getElementById('icon-search');
    const iconDropdown = document.getElementById('icon-dropdown');
    const iconList = document.getElementById('icon-list');
    const mainPreview = document.getElementById('icon-preview-main');

    const commonIcons = [
        'Github', 'Linkedin', 'Twitter', 'Instagram', 'Youtube', 'Facebook', 'Globe',
        'Mail', 'MessageCircle', 'Slack', 'Twitch', 'Dribbble', 'Figma', 'Send', 'ExternalLink'
    ];

    function updatePreview(iconName) {
        mainPreview.innerHTML = `<i data-lucide="${iconName.toLowerCase()}"></i>`;
        lucide.createIcons();
    }

    iconSearch.addEventListener('input', (e) => {
        const query = e.target.value.toLowerCase();
        if (query.length < 1) {
            iconDropdown.style.display = 'none';
            return;
        }

        const filtered = commonIcons.filter(icon => icon.toLowerCase().includes(query));

        if (filtered.length > 0) {
            iconList.innerHTML = filtered.map(icon => `
                <div class="icon-option" onclick="selectIcon('${icon}')">
                    <i data-lucide="${icon.toLowerCase()}"></i>
                    <span>${icon}</span>
                </div>
            `).join('');
            iconDropdown.style.display = 'block';
            lucide.createIcons();
        } else {
            iconDropdown.style.display = 'none';
        }

        updatePreview(e.target.value || 'globe');
    });

    window.selectIcon = function (icon) {
        iconSearch.value = icon;
        iconDropdown.style.display = 'none';
        updatePreview(icon);
    }

    document.addEventListener('click', (e) => {
        if (!iconSearch.contains(e.target) && !iconDropdown.contains(e.target)) {
            iconDropdown.style.display = 'none';
        }
    });

    // Reordering
    const el = document.getElementById('link-list');
    if (el) {
        Sortable.create(el, {
            animation: 150,
            ghostClass: 'sortable-ghost',
            onEnd: function (evt) {
                const order = Array.from(el.querySelectorAll('.link-item')).map(item => item.getAttribute('data-id'));
                fetch('/admin/social-links/reorder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ order })
                });
            }
        });
    }
</script>
<div style="max-width: 900px; margin: 0 auto;">
    <div style="margin-bottom: 2rem; display: flex; justify-content: space-between; align-items: flex-end;">
        <div>
            <h3 style="margin: 0; font-size: 1.5rem; color: var(--primary);">Personal Profile</h3>
            <p style="margin: 0.5rem 0 0 0; color: #64748b;">Manage your basic information and branding</p>
        </div>
        <div style="font-size: 0.875rem; color: #94a3b8;">
            Last updated: <%= profile.updatedAt ? new Date(profile.updatedAt).toLocaleDateString() : 'Never' %>
        </div>
    </div>

    <form action="/admin/profile" method="POST" enctype="multipart/form-data">
        <div style="display: grid; grid-template-columns: 280px 1fr; gap: 2rem;">
            <!-- Left Column: Media -->
            <div style="display: flex; flex-direction: column; gap: 2rem;">
                <div class="card" style="text-align: center; padding: 2rem;">
                    <label style="display: block; margin-bottom: 1.5rem; color: #475569; font-weight: 600;">Profile
                        Picture</label>
                    <div id="image-upload-wrapper"
                        style="position: relative; width: 180px; height: 180px; margin: 0 auto; cursor: pointer;">
                        <div id="profile-preview-container"
                            style="width: 100%; height: 100%; border-radius: 50%; overflow: hidden; border: 4px solid white; box-shadow: 0 10px 25px -5px rgba(0,0,0,0.1); background: #f8fafc; display: flex; align-items: center; justify-content: center;">
                            <% if (profile.profilePicture) { %>
                                <img src="<%= profile.profilePicture %>" id="profile-preview"
                                    style="width: 100%; height: 100%; object-fit: cover;">
                                <% } else { %>
                                    <i data-lucide="user" style="width: 64px; height: 64px; color: #cbd5e1;"></i>
                                    <% } %>
                        </div>
                        <div
                            style="position: absolute; bottom: 5px; right: 5px; background: var(--accent); color: white; width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center; border: 3px solid white; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);">
                            <i data-lucide="camera" style="width: 20px; height: 20px;"></i>
                        </div>
                        <input type="file" id="profilePicture" name="profilePicture" accept="image/*"
                            style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;">
                    </div>
                    <p style="margin-top: 1.5rem; font-size: 0.75rem; color: #64748b; line-height: 1.4;">
                        Recommended: Square image<br>Min 400x400px
                    </p>
                </div>

                <div class="card" style="padding: 1.5rem;">
                    <div
                        style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 1rem; color: var(--primary);">
                        <i data-lucide="file-text" style="width: 20px; height: 20px;"></i>
                        <h4 style="margin: 0; font-size: 1rem;">Resources</h4>
                    </div>
                    <div class="form-group" style="margin-bottom: 0;">
                        <label for="resumeUrl" style="font-size: 0.8rem;">Resume / CV Link</label>
                        <div style="position: relative;">
                            <i data-lucide="link"
                                style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%); width: 14px; color: #94a3b8;"></i>
                            <input type="text" id="resumeUrl" name="resumeUrl" class="form-control"
                                value="<%= profile.resumeUrl %>" placeholder="e.g. /files/resume.pdf"
                                style="padding-left: 2rem; font-size: 0.9rem;">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Details -->
            <div style="display: flex; flex-direction: column; gap: 2rem;">
                <div class="card" style="padding: 2rem;">
                    <div
                        style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 2rem; color: var(--primary);">
                        <i data-lucide="user-cog" style="width: 24px; height: 24px;"></i>
                        <h4 style="margin: 0; font-size: 1.1rem;">Basic Information</h4>
                    </div>

                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                        <div class="form-group">
                            <label for="name">Full Name</label>
                            <input type="text" id="name" name="name" class="form-control" value="<%= profile.name %>"
                                required placeholder="Your professional name">
                        </div>
                        <div class="form-group">
                            <label for="title">Title / Headline</label>
                            <input type="text" id="title" name="title" class="form-control" value="<%= profile.title %>"
                                placeholder="e.g. Senior Product Designer">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="bio">Professional Bio (Optional)</label>
                        <textarea id="bio" name="bio" class="form-control" rows="4"
                            placeholder="Briefly describe your focus and expertise..."><%= profile.bio || '' %></textarea>
                    </div>
                </div>

                <div class="card" style="padding: 2rem;">
                    <div
                        style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 2rem; color: var(--primary);">
                        <i data-lucide="building" style="width: 24px; height: 24px;"></i>
                        <h4 style="margin: 0; font-size: 1.1rem;">Current Organization</h4>
                    </div>

                    <div class="form-group">
                        <label for="organization">Company / Agency Name</label>
                        <input type="text" id="organization" name="organization" class="form-control"
                            value="<%= profile.organization %>" placeholder="Where you currently work">
                    </div>

                    <div class="form-group">
                        <label for="organizationUrl">Organization Website</label>
                        <div style="position: relative;">
                            <i data-lucide="globe"
                                style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); width: 18px; color: #94a3b8;"></i>
                            <input type="url" id="organizationUrl" name="organizationUrl" class="form-control"
                                value="<%= profile.organizationUrl %>" style="padding-left: 2.5rem;"
                                placeholder="https://company.com">
                        </div>
                    </div>
                </div>

                <div style="display: flex; justify-content: flex-end; gap: 1rem; margin-top: 1rem;">
                    <button type="submit" class="btn btn-primary"
                        style="padding: 1rem 3rem; font-size: 1rem; border-radius: 8px; box-shadow: 0 4px 6px -1px rgba(14, 42, 71, 0.2);">
                        Save Profile Changes
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Scripts -->
<script src="https://unpkg.com/lucide@latest"></script>
<script>
    lucide.createIcons();

    // Live preview for profile picture
    const fileInput = document.getElementById('profilePicture');
    const previewContainer = document.getElementById('profile-preview-container');

    fileInput.addEventListener('change', function () {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                previewContainer.innerHTML = `<img src="${e.target.result}" style="width: 100%; height: 100%; object-fit: cover;">`;
            };
            reader.readAsDataURL(file);
        }
    });

    // Optional: Add auto-save notification logic if needed
</script>

<style>
    .form-group label {
        display: block;
        margin-bottom: 0.6rem;
        font-weight: 500;
        color: #475569;
        font-size: 0.9rem;
    }

    .form-control:focus {
        border-color: var(--accent);
        outline: none;
        box-shadow: 0 0 0 4px rgba(10, 124, 134, 0.1);
    }

    #image-upload-wrapper:hover #profile-preview-container {
        border-color: var(--accent);
        opacity: 0.9;
    }

    textarea.form-control {
        resize: vertical;
        line-height: 1.6;
    }
</style>
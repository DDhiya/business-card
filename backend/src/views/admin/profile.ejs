<div class="profile-page">
    <div class="page-header">
        <div class="header-content">
            <h3>Personal Profile</h3>
            <p>Manage your basic information and branding</p>
        </div>
        <div class="header-meta">
            Last updated: <%= profile.updatedAt ? new Date(profile.updatedAt).toLocaleDateString() : 'Never' %>
        </div>
    </div>

    <form action="/admin/profile" method="POST" enctype="multipart/form-data">
        <div class="profile-grid">
            <!-- Left Column: Media -->
            <div class="profile-media">
                <div class="card media-card">
                    <label class="section-label">Profile Picture</label>
                    <div id="image-upload-wrapper" class="profile-pic-uploader">
                        <div id="profile-preview-container" class="profile-pic-preview">
                            <% if (profile.profilePicture) { %>
                                <img src="<%= profile.profilePicture %>" id="profile-preview">
                                <% } else { %>
                                    <i data-lucide="user" class="placeholder-icon"></i>
                                    <% } %>
                        </div>
                        <div class="upload-badge">
                            <i data-lucide="camera"></i>
                        </div>
                        <input type="file" id="profilePicture" name="profilePicture" accept="image/*">
                    </div>
                    <p class="section-hint">
                        Recommended: Square image<br>Min 400x400px
                    </p>
                </div>

                <div class="card resource-card">
                    <div class="section-title">
                        <i data-lucide="file-text"></i>
                        <h4>Resources</h4>
                    </div>
                    <div class="form-group">
                        <label for="resumeUrl">Resume / CV Link</label>
                        <div class="input-with-icon">
                            <i data-lucide="link"></i>
                            <input type="text" id="resumeUrl" name="resumeUrl" class="form-control"
                                value="<%= profile.resumeUrl %>" placeholder="e.g. /files/resume.pdf">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Details -->
            <div class="profile-details">
                <div class="card detail-card">
                    <div class="section-title">
                        <i data-lucide="user-cog"></i>
                        <h4>Basic Information</h4>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="name">Full Name</label>
                            <input type="text" id="name" name="name" class="form-control" value="<%= profile.name %>"
                                required placeholder="Your professional name">
                        </div>
                        <div class="form-group">
                            <label for="title">Title / Headline</label>
                            <input type="text" id="title" name="title" class="form-control" value="<%= profile.title %>"
                                placeholder="e.g. Senior Product Designer">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="bio">Professional Bio (Optional)</label>
                        <textarea id="bio" name="bio" class="form-control" rows="4"
                            placeholder="Briefly describe your focus and expertise..."><%= profile.bio || '' %></textarea>
                    </div>
                </div>

                <div class="card detail-card">
                    <div class="section-title">
                        <i data-lucide="building"></i>
                        <h4>Current Organization</h4>
                    </div>

                    <div class="form-group">
                        <label for="organization">Company / Agency Name</label>
                        <input type="text" id="organization" name="organization" class="form-control"
                            value="<%= profile.organization %>" placeholder="Where you currently work">
                    </div>

                    <div class="form-group">
                        <label for="organizationUrl">Organization Website</label>
                        <div class="input-with-icon">
                            <i data-lucide="globe"></i>
                            <input type="url" id="organizationUrl" name="organizationUrl" class="form-control"
                                value="<%= profile.organizationUrl %>" placeholder="https://company.com">
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary submit-btn">
                        Save Profile Changes
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Scripts -->
<script src="https://unpkg.com/lucide@latest"></script>
<script>
    lucide.createIcons();

    // Live preview for profile picture
    const fileInput = document.getElementById('profilePicture');
    const previewContainer = document.getElementById('profile-preview-container');

    fileInput.addEventListener('change', function () {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                previewContainer.innerHTML = `<img src="${e.target.result}" style="width: 100%; height: 100%; object-fit: cover;">`;
            };
            reader.readAsDataURL(file);
        }
    });
</script>
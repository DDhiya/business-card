<div class="form-container" style="max-width: 800px; margin: 0 auto;">
    <div class="page-header">
        <div class="header-content" style="display: flex; align-items: center; gap: 1rem;">
            <a href="/admin/experiences" class="btn-icon"
                style="background: var(--white); border: 1px solid var(--brand-border); width: 44px; height: 44px;">
                <i data-lucide="arrow-left"></i>
            </a>
            <h3 style="margin: 0;">
                <%= experience.id ? 'Edit Experience' : 'Add New Experience' %>
            </h3>
        </div>
    </div>

    <div class="card">
        <form
            action="<%= experience.id ? '/admin/experiences/' + experience.id + '?_method=PUT' : '/admin/experiences' %>"
            method="POST" enctype="multipart/form-data">

            <div class="form-row">
                <div class="form-group">
                    <label for="companyName">Company Name</label>
                    <div class="input-with-icon">
                        <i data-lucide="building-2"></i>
                        <input type="text" id="companyName" name="companyName" class="form-control"
                            value="<%= experience.companyName || '' %>" required placeholder="e.g. Google">
                    </div>
                </div>

                <div class="form-group">
                    <label for="role">Role / Job Title</label>
                    <div class="input-with-icon">
                        <i data-lucide="briefcase"></i>
                        <input type="text" id="role" name="role" class="form-control"
                            value="<%= experience.role || '' %>" required placeholder="e.g. Senior Software Engineer">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="companyLogo">Company Logo</label>
                <div
                    style="display: flex; align-items: flex-start; gap: 1.5rem; background: var(--brand-offwhite); padding: 1.5rem; border-radius: 16px; border: 1px dashed var(--brand-border);">
                    <div id="logo-preview-container" class="company-logo"
                        style="width: 80px; height: 80px; background: var(--white);">
                        <% if (experience.companyLogo) { %>
                            <img src="<%= experience.companyLogo %>" id="logo-preview">
                            <% } else { %>
                                <i data-lucide="image" id="logo-placeholder"
                                    style="width: 32px; height: 32px; color: #cbd5e1;"></i>
                                <% } %>
                    </div>
                    <div style="flex-grow: 1;">
                        <input type="file" id="companyLogo" name="companyLogo" class="form-control" accept="image/*">
                        <p style="font-size: 0.75rem; color: var(--brand-muted); margin: 0.75rem 0 0 0;">
                            Recommended size: 200x200px. PNG or SVG preferred.
                        </p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="location">Location</label>
                <div class="input-with-icon">
                    <i data-lucide="map-pin"></i>
                    <input type="text" id="location" name="location" class="form-control"
                        value="<%= experience.location || '' %>" placeholder="e.g. Remote or Singapore">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="startDate">Start Date</label>
                    <div class="input-with-icon">
                        <i data-lucide="calendar"></i>
                        <input type="text" id="startDate" name="startDate" class="form-control"
                            value="<%= experience.startDate || '' %>" placeholder="e.g. Jan 2022">
                    </div>
                </div>

                <div class="form-group">
                    <label for="endDate">End Date</label>
                    <div class="input-with-icon">
                        <i data-lucide="calendar-check"></i>
                        <input type="text" id="endDate" name="endDate" class="form-control"
                            value="<%= experience.endDate || '' %>" placeholder="e.g. Present or Dec 2023">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="description">Description (Responsibilities & Achievements)</label>
                <textarea id="description" name="description" class="form-control" rows="6"
                    placeholder="Describe your key contributions..."><%= experience.description || '' %></textarea>
            </div>

            <div class="form-actions"
                style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid var(--brand-border);">
                <a href="/admin/experiences" class="btn" style="background: var(--brand-offwhite);">Cancel</a>
                <button type="submit" class="btn btn-primary" style="min-width: 180px;">
                    <%= experience.id ? 'Save Changes' : 'Create Experience' %>
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://unpkg.com/lucide@latest"></script>
<script>
    lucide.createIcons();

    const logoInput = document.getElementById('companyLogo');
    const previewContainer = document.getElementById('logo-preview-container');

    logoInput.addEventListener('change', function () {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                previewContainer.innerHTML = `<img src="${e.target.result}" style="width: 100%; height: 100%; object-fit: contain;">`;
            }
            reader.readAsDataURL(file);
        }
    });
</script>
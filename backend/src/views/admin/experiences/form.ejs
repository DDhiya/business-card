<div style="max-width: 800px; margin: 0 auto;">
    <div style="margin-bottom: 2rem; display: flex; align-items: center; gap: 1rem;">
        <a href="/admin/experiences" class="btn-icon"
            style="background: white; border: 1px solid var(--border-color); border-radius: 50%; padding: 0.5rem; width: 40px; height: 40px; justify-content: center;">
            <i data-lucide="arrow-left"></i>
        </a>
        <h3 style="margin: 0;">
            <%= experience.id ? 'Edit Experience' : 'Add New Experience' %>
        </h3>
    </div>

    <div class="card" style="padding: 2rem;">
        <form
            action="<%= experience.id ? '/admin/experiences/' + experience.id + '?_method=PUT' : '/admin/experiences' %>"
            method="POST" enctype="multipart/form-data">

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                <div class="form-group">
                    <label for="companyName">Company Name</label>
                    <div style="position: relative;">
                        <i data-lucide="building-2"
                            style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); width: 18px; color: #94a3b8;"></i>
                        <input type="text" id="companyName" name="companyName" class="form-control"
                            value="<%= experience.companyName || '' %>" required style="padding-left: 2.5rem;"
                            placeholder="e.g. Google">
                    </div>
                </div>

                <div class="form-group">
                    <label for="role">Role / Job Title</label>
                    <div style="position: relative;">
                        <i data-lucide="briefcase"
                            style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); width: 18px; color: #94a3b8;"></i>
                        <input type="text" id="role" name="role" class="form-control"
                            value="<%= experience.role || '' %>" required style="padding-left: 2.5rem;"
                            placeholder="e.g. Senior Software Engineer">
                    </div>
                </div>
            </div>

            <div class="form-group" style="margin-top: 1rem;">
                <label for="companyLogo">Company Logo</label>
                <div
                    style="display: flex; align-items: flex-start; gap: 1.5rem; background: #f8fafc; padding: 1rem; border-radius: 8px; border: 1px dashed var(--border-color);">
                    <div id="logo-preview-container"
                        style="width: 80px; height: 80px; background: white; border-radius: 8px; border: 1px solid var(--border-color); display: flex; align-items: center; justify-content: center; overflow: hidden; flex-shrink: 0;">
                        <% if (experience.companyLogo) { %>
                            <img src="<%= experience.companyLogo %>" id="logo-preview"
                                style="width: 100%; height: 100%; object-fit: contain;">
                            <% } else { %>
                                <i data-lucide="image" id="logo-placeholder"
                                    style="width: 32px; height: 32px; color: #cbd5e1;"></i>
                                <% } %>
                    </div>
                    <div style="flex-grow: 1;">
                        <input type="file" id="companyLogo" name="companyLogo" class="form-control" accept="image/*"
                            style="background: white;">
                        <p style="font-size: 0.75rem; color: #64748b; margin: 0.5rem 0 0 0;">Recommended size:
                            200x200px. PNG or SVG preferred.</p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="location">Location</label>
                <div style="position: relative;">
                    <i data-lucide="map-pin"
                        style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); width: 18px; color: #94a3b8;"></i>
                    <input type="text" id="location" name="location" class="form-control"
                        value="<%= experience.location || '' %>" style="padding-left: 2.5rem;"
                        placeholder="e.g. Remote or Singapore">
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                <div class="form-group">
                    <label for="startDate">Start Date</label>
                    <div style="position: relative;">
                        <i data-lucide="calendar"
                            style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); width: 18px; color: #94a3b8;"></i>
                        <input type="text" id="startDate" name="startDate" class="form-control"
                            value="<%= experience.startDate || '' %>" style="padding-left: 2.5rem;"
                            placeholder="e.g. Jan 2022">
                    </div>
                </div>

                <div class="form-group">
                    <label for="endDate">End Date</label>
                    <div style="position: relative;">
                        <i data-lucide="calendar-check"
                            style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); width: 18px; color: #94a3b8;"></i>
                        <input type="text" id="endDate" name="endDate" class="form-control"
                            value="<%= experience.endDate || '' %>" style="padding-left: 2.5rem;"
                            placeholder="e.g. Present or Dec 2023">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="description">Description (Responsibilities & Achievements)</label>
                <textarea id="description" name="description" class="form-control" rows="6"
                    placeholder="Describe your key contributions..."><%= experience.description || '' %></textarea>
            </div>

            <div
                style="display: flex; justify-content: flex-end; gap: 1rem; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid var(--border-color);">
                <a href="/admin/experiences" class="btn" style="background: #f1f5f9; color: #475569;">Cancel</a>
                <button type="submit" class="btn btn-primary" style="padding-left: 2.5rem; padding-right: 2.5rem;">
                    <%= experience.id ? 'Save Changes' : 'Create Experience' %>
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://unpkg.com/lucide@latest"></script>
<script>
    lucide.createIcons();

    // Logo preview logic
    const logoInput = document.getElementById('companyLogo');
    const previewContainer = document.getElementById('logo-preview-container');

    logoInput.addEventListener('change', function () {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                previewContainer.innerHTML = `<img src="${e.target.result}" style="width: 100%; height: 100%; object-fit: contain;">`;
            }
            reader.readAsDataURL(file);
        }
    });
</script>

<style>
    .form-group label {
        color: #475569;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control:focus {
        border-color: var(--accent);
        outline: none;
        box-shadow: 0 0 0 3px rgba(10, 124, 134, 0.1);
    }

    textarea.form-control {
        line-height: 1.6;
        resize: vertical;
    }

    .btn-icon {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: #64748b;
        transition: all 0.2s;
    }

    .btn-icon:hover {
        color: var(--accent);
        border-color: var(--accent) !important;
        transform: scale(1.05);
    }
</style>
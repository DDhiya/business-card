<div class="card">
    <div class="page-header">
        <div class="header-content">
            <h3>Work Experiences</h3>
            <p>Drag items to reorder your professional journey</p>
        </div>
        <div class="header-actions">
            <a href="/admin/experiences/new" class="btn btn-accent">Add Experience</a>
        </div>
    </div>

    <div id="experience-list" class="experience-list">
        <% experiences.forEach(exp=> { %>
            <div class="experience-item" data-id="<%= exp.id %>">
                <div class="company-logo">
                    <% if (exp.companyLogo) { %>
                        <img src="<%= exp.companyLogo %>" alt="<%= exp.companyName %> logo">
                        <% } else { %>
                            <i data-lucide="briefcase" style="color: #94a3b8;"></i>
                            <% } %>
                </div>

                <div class="exp-details">
                    <h4 class="exp-role">
                        <%= exp.role %>
                    </h4>
                    <div class="exp-meta">
                        <span class="exp-company">
                            <%= exp.companyName %>
                        </span>
                        <span class="exp-dot">â€¢</span>
                        <span>
                            <%= exp.startDate %> - <%= exp.endDate || 'Present' %>
                        </span>
                    </div>
                </div>

                <div class="item-actions">
                    <a href="/admin/experiences/<%= exp.id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                    <form action="/admin/experiences/<%= exp.id %>?_method=DELETE" method="POST"
                        style="display: inline;"
                        onsubmit="return confirm('Are you sure you want to delete this experience?')">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            </div>
            <% }) %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const experienceListEl = document.getElementById('experience-list');
        if (experienceListEl) {
            Sortable.create(experienceListEl, {
                animation: 150,
                ghostClass: 'sortable-ghost',
                onEnd: function (evt) {
                    const order = Array.from(experienceListEl.querySelectorAll('.experience-item')).map(item => item.getAttribute('data-id'));
                    fetch('/admin/experiences/reorder', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            order
                        })
                    });
                }
            });
        }
    });
</script>
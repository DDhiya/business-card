<div class="card">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h3 style="margin: 0;">Work Experiences</h3>
        <div style="display: flex; align-items: center; gap: 1rem;">
            <span style="font-size: 0.875rem; color: #64748b;">Drag to reorder</span>
            <a href="/admin/experiences/new" class="btn btn-accent">Add Experience</a>
        </div>
    </div>

    <div id="experience-list" class="space-y-4">
        <% experiences.forEach(exp=> { %>
            <div class="experience-item" data-id="<%= exp.id %>"
                style="background: white; border: 1px solid var(--border-color); border-radius: 8px; padding: 1.25rem; margin-bottom: 1rem; cursor: move; display: flex; align-items: center; gap: 1.5rem; transition: all 0.2s;">
                <div
                    style="flex-shrink: 0; width: 60px; height: 60px; background: #f8fafc; border-radius: 8px; display: flex; align-items: center; justify-content: center; overflow: hidden; border: 1px solid #f1f5f9;">
                    <% if (exp.companyLogo) { %>
                        <img src="<%= exp.companyLogo %>" style="width: 100%; height: 100%; object-fit: contain;">
                        <% } else { %>
                            <i data-lucide="briefcase" style="color: #94a3b8;"></i>
                            <% } %>
                </div>

                <div style="flex-grow: 1;">
                    <h4 style="margin: 0 0 0.25rem 0; font-size: 1.1rem; color: var(--primary);">
                        <%= exp.role %>
                    </h4>
                    <div style="display: flex; align-items: center; gap: 0.5rem; color: #64748b; font-size: 0.9rem;">
                        <span style="font-weight: 600; color: #334155;">
                            <%= exp.companyName %>
                        </span>
                        <span>â€¢</span>
                        <span>
                            <%= exp.startDate %> - <%= exp.endDate || 'Present' %>
                        </span>
                    </div>
                </div>

                <div class="actions" style="margin-left: auto;">
                    <a href="/admin/experiences/<%= exp.id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                    <form action="/admin/experiences/<%= exp.id %>?_method=DELETE" method="POST"
                        style="display: inline;"
                        onsubmit="return confirm('Are you sure you want to delete this experience?')">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            </div>
            <% }) %>
    </div>
</div>

<script src="https://unpkg.com/lucide@latest"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script>
    // Initialize Lucide
    lucide.createIcons();

    const el = document.getElementById('experience-list');
    if (el) {
        Sortable.create(el, {
            animation: 150,
            ghostClass: 'sortable-ghost',
            onEnd: function (evt) {
                const order = Array.from(el.querySelectorAll('.experience-item')).map(item => item.getAttribute('data-id'));

                fetch('/admin/experiences/reorder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ order })
                })
                    .then(response => {
                        if (!response.ok) throw new Error('Order update failed');
                        console.log('Order updated');
                    })
                    .catch(err => {
                        console.error(err);
                        alert('Failed to save new order');
                    });
            }
        });
    }
</script>

<style>
    .experience-item:hover {
        border-color: var(--accent) !important;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        transform: translateY(-2px);
    }

    .sortable-ghost {
        opacity: 0.4;
        background: #f1f5f9 !important;
        border: 2px dashed var(--accent) !important;
    }

    .space-y-4>*+* {
        margin-top: 1rem;
    }
</style>